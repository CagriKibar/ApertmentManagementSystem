@model IEnumerable<Manager.Core.Model.Entity.Events>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Etkinlik Kontrolü</h2>

<p>
    <button class="btn btn-default">@Html.ActionLink("Yeni", "Create")</button>  
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFullDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CitizenID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFullDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CitizenID)
        </td>
        <td>
            <button class="btn btn-default">@Html.ActionLink("Düzenle", "Edit", new { id = item.EventID })</button>    
            <button class="btn btn-default">@Html.ActionLink("Detaylar", "Details", new { id = item.EventID })</button>    
            <button class="btn btn-default">@Html.ActionLink("Sil", "Delete", new { id = item.EventID })</button>    
           
            
        </td>
    </tr>
}
</table>
<br />
